---
import { Image } from "astro:assets";
import type { PostData } from "@interfaces/data";
const { title, image } = Astro.props as PostData;
---

<article class="feishu-doc">
  {image && (
    <div class="mb-8">
      <Image src={image} width="1920" height="1080" alt={title} loading="eager" class="w-full" />
    </div>
  )}
  <div class="doc-content prose prose-lg max-w-none">
    <slot />
  </div>
</article>

<style>
  .feishu-doc {
    line-height: 1.7;
  }

  .doc-content :global(p) {
    @apply mb-4;
    line-height: 1.7;
  }

  .doc-content :global(h1),
  .doc-content :global(h2),
  .doc-content :global(h3) {
    @apply font-semibold mt-8 mb-4;
    letter-spacing: -0.01em;
  }
</style>
