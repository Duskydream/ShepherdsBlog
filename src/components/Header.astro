---
import "../styles/global.scss";
import type { HeaderProps } from "@interfaces/data";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, favicon, image, loadKatex = false } = Astro.props as HeaderProps & { loadKatex?: boolean };
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image" href={favicon} />
<meta name="generator" content={Astro.generator} />

<!-- Preconnect to critical external domains -->
<link rel="preconnect" href="https://pic1.imgdb.cn" crossorigin />
<link rel="dns-prefetch" href="https://pic1.imgdb.cn" />
<!-- Busuanzi analytics is loaded deferred on article pages; skip preconnect to avoid early DNS lookups -->

<meta name="description" content={description} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{image && <meta property="og:image" content={image} />}
<link rel="canonical" href={canonicalURL.toString()} />

<!-- Only load KaTeX CSS when needed -->
{loadKatex && <link rel="stylesheet" href="/node_modules/katex/dist/katex.min.css" />}
