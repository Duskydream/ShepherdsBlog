---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import LinkCard from "@/components/mdx/LinkCard.astro";
import FriendCard from "@/components/mdx/FriendCard.astro";
import Card from "@/components/temple/Card.astro";
import CardGroup from "@/components/temple/CardGroup.astro";
import Showcase from "@/components/mdx/Showcase.astro";

const sites = [{ name: "Frosti Demo", url: "https://frosti.saroprock.com/" }];
---

<BaseLayout title="Friends">
  <CardGroup cols="1">
    <MainCard
      title="Friends & Resources"
      description="A collection of links to friends, technologies, and contributors to the Frosti project."
    >
      <div class="space-y-10">
        <!-- Friends Section -->
        <section>
          <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
            <Icon name="lucide:users" class="w-6 h-6 text-primary" />
            <span>Friends</span>
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <FriendCard
              name="Rock Zhang"
              avatar="https://github.com/Algacez.png"
              description="UESTC CS Student"
              url="https://blog.282994.xyz/"
              type="friend"
            />
            <FriendCard
              name="gkouen"
              avatar="https://github.com/Shizuku-in.png"
              description="XMU CS Student"
              url="https://blog.cya.moe/"
              type="friend"
            />
            <FriendCard
              name="Coast23"
              avatar="https://github.com/Coast23.png"
              description="XMU CS Student"
              url="https://coast23.github.io/"
              type="friend"
            />
            <FriendCard
              name="CDX"
              avatar="https://github.com/CDX0721.png"
              description="XMU CS Student"
              url="https://cdx0721.github.io/"
              type="friend"
            />
            <FriendCard
              name="折叠的博客"
              avatar="https://github.com/FFFold.png"
              description="XMU Student"
              url="https://fffold.github.io/"
              type="friend"
            />
