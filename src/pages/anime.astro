// Removed React import; use Astro components or client scripts for interactivity.

type Subject = {
  id: number;
  name: string;
  name_cn?: string;
  date?: string;
  images?: {
    common?: string;
  };
};

type WatchingItem = {
  subject: Subject;
};

const username = "851657"; // 建议放到 import.meta.env.PUBLIC_BGM_USER
const baseUrl = `https://api.bgm.tv/v0/users/${username}/collections`;

async function fetchCollection(type: number): Promise<WatchingItem[]> {
  try {
    const res = await fetch(`${baseUrl}?type=${type}`, {
      headers: {
        "User-Agent": "AstroBlog/1.0 (https://yourblog.com)",
      },
    });
    if (res.ok) {
      const data = await res.json();
      return data.data ?? [];
    } else {
      console.error("API 请求失败", res.status);
      return [];
    }
  } catch (err) {
    console.error("API 错误", err);
    return [];
  }
}

const watching: WatchingItem[] = await fetchCollection(3); // 在看
const wish: WatchingItem[] = await fetchCollection(1); // 想看
const watched: WatchingItem[] = await fetchCollection(2); // 看过
---

<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <title>我的追番</title>
    <style>
      body {
        font-family: sans-serif;
        margin: 1rem;
        color: #333;
      }
      .tabs {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
      }
      .tabs button {
        padding: 0.5rem 1rem;
        border: 1px solid #ddd;
        background: #f9f9f9;
        border-radius: 6px;
        cursor: pointer;
      }
      .tabs button.active {
        background: #0078d7;
        color: white;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 1rem;
      }
      .card {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-align: center;
        transition: transform 0.2s;
      }
      .card:hover {
        transform: translateY(-3px);
      }
      .card img {
        width: 100%;
        display: block;
      }
      .card h3 {
        font-size: 1rem;
        margin: 0.5rem 0;
      }
      .card p {
        font-size: 0.85rem;
        color: #666;
        margin-bottom: 0.5rem;
      }
      input[type="text"] {
        padding: 0.5rem;
        width: 100%;
        max-width: 300px;
        margin-bottom: 1rem;
        border-radius: 6px;
        border: 1px solid #ccc;
      }
    </style>
  </head>

  <body>
    <h1>📺 我的追番</h1>

    <!-- 搜索框 -->
    <input type="text" id="search" placeholder="搜索番剧..." />

    <!-- 标签按钮 -->
    <div class="tabs">
      <button id="tab-watching" class="active">在看</button>
      <button id="tab-wish">想看</button>
      <button id="tab-watched">看过</button>
    </div>

    <!-- 内容 -->
    <div id="tab-content">
      <div id="content-watching" class="grid">
        {
          watching.length === 0 ? (
            <p>目前没有在看的番剧</p>
          ) : (
            watching.map((item) => (
              <div class="card" data-name={(item.subject.name_cn || item.subject.name).toLowerCase()}>
                {item.subject.images?.common && (
                  <a href={`https://bgm.tv/subject/${item.subject.id}`} target="_blank">
                    <img src={item.subject.images.common} alt={item.subject.name_cn || item.subject.name} />
                  </a>
                )}
                <h3>{item.subject.name_cn || item.subject.name}</h3>
                {item.subject.date && <p>{item.subject.date}</p>}
              </div>
            ))
          )
        }
      </div>

      <div id="content-wish" class="grid" style="display:none;">
        {
          wish.length === 0 ? (
            <p>目前没有想看的番剧</p>
          ) : (
            wish.map((item) => (
              <div class="card" data-name={(item.subject.name_cn || item.subject.name).toLowerCase()}>
                {item.subject.images?.common && (
                  <a href={`https://bgm.tv/subject/${item.subject.id}`} target="_blank">
                    <img src={item.subject.images.common} alt={item.subject.name_cn || item.subject.name} />
                  </a>
                )}
                <h3>{item.subject.name_cn || item.subject.name}</h3>
                {item.subject.date && <p>{item.subject.date}</p>}
              </div>
            ))
          )
        }
      </div>

      <div id="content-watched" class="grid" style="display:none;">
        {
          watched.length === 0 ? (
            <p>目前没有看过的番剧</p>
          ) : (
            watched.map((item) => (
              <div class="card" data-name={(item.subject.name_cn || item.subject.name).toLowerCase()}>
                {item.subject.images?.common && (
                  <a href={`https://bgm.tv/subject/${item.subject.id}`} target="_blank">
                    <img src={item.subject.images.common} alt={item.subject.name_cn || item.subject.name} />
                  </a>
                )}
                <h3>{item.subject.name_cn || item.subject.name}</h3>
                {item.subject.date && <p>{item.subject.date}</p>}
              </div>
            ))
          )
        }
      </div>
    </div>

    <!-- 标签切换 + 搜索 JS -->
    <script>
      const tabButtons = [
        document.getElementById("tab-watching"),
        document.getElementById("tab-wish"),
        document.getElementById("tab-watched"),
      ];
      const tabContents = [
        document.getElementById("content-watching"),
        document.getElementById("content-wish"),
        document.getElementById("content-watched"),
      ];

      tabButtons.forEach((btn, idx) => {
        if (btn) {
          btn.addEventListener("click", () => {
            tabButtons.forEach((b) => b && b.classList.remove("active"));
            btn.classList.add("active");
            tabContents.forEach((c, i) => c && (c.style.display = i === idx ? "" : "none"));
            filterCards(); // 切换标签时也触发搜索过滤
          });
        }
      });

      const searchInput = document.getElementById("search") as HTMLInputElement | null;
      if (searchInput) {
        searchInput.addEventListener("input", filterCards);
      }

      function filterCards() {
        const term = searchInput ? searchInput.value.toLowerCase() : "";
        const activeContent = tabContents.find((c) => c && c.style.display !== "none");
        if (!activeContent) return;
        const cards = activeContent.querySelectorAll(".card");
        cards.forEach((card) => {
          const name = (card as HTMLElement).dataset.name || "";
          (card as HTMLElement).style.display = name.includes(term) ? "" : "none";
        });
      }
    </script>
  </body>
</html>
