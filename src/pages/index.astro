---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
import GitHubCalendar from "@/components/GitHubCalendar.astro";
import { getCollection } from "astro:content";
import PostCard from "@/components/PostCard.astro";
import dayjs from "@/utils/dayjs";
import { DATE_FORMAT } from "@/config";

const rawPosts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

// Render to obtain remarkPluginFrontmatter (readingTime & totalCharCount)
const posts = await Promise.all(
  rawPosts.map(async (p) => {
    const { remarkPluginFrontmatter } = await p.render();
    return {
      ...p,
      remarkPluginFrontmatter,
    };
  }),
);

const logs = (await getCollection("log")).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()).slice(0, 6);
---

<BaseLayout title="About">
  <MainCard title="About Shepherd" description="About me" textOverlay="ABOUT" infoIcon="lucide:user">
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
