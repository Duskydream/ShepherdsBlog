{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "./edgeone/functions",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": [],
    "allowJs": false,
    "outDir": "./functions",
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false
  },
  "include": ["edgeone/functions/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
